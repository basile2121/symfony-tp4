{% extends 'admin/base_admin.html.twig' %}

{% block title %}HighSchool{% endblock %}

{% block body %}
    <h1>HighSchool</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ high_school.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ high_school.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ high_school.createdAt ? high_school.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ high_school.updatedAt ? high_school.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <section class="container-fluid">
        <h1>Etudiant de l'école</h1>

        <div class="content">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                </tr>
                </thead>
                <tbody>
                {% for student in high_school.students %}
                    <tr>
                        <td>{{ student.email }}</td>
                        <td>{{ student.phone }}</td>
                        <td>{{ student.firstName }}</td>
                        <td>{{ student.lastName }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Pas de données trouvées</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>

    <a class="btn btn-primary" href="{{ path('app_high_school_index') }}">Retour</a>

    <a class="btn btn-warning" href="{{ path('app_high_school_edit', {'id': high_school.id}) }}">Modifier</a>

    {{ include('admin/high_school/_delete_form.html.twig') }}
{% endblock %}

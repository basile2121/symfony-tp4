{% extends 'admin/base_admin.html.twig' %}

{% block title %}Workshop{% endblock %}

{% block body %}
    <h1>Workshop</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ workshop.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ workshop.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ workshop.createdAt ? workshop.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ workshop.updatedAt ? workshop.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_workshop_index') }}">back to list</a>

    <a class="btn btn-warning" href="{{ path('app_workshop_edit', {'id': workshop.id}) }}">edit</a>

    {{ include('admin/workshop/_delete_form.html.twig') }}
{% endblock %}

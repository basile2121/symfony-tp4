{% extends 'admin/base_admin.html.twig' %}

{% block title %}PossibleAnswer
{% endblock %}

{% block body %}
	<h1>Réponse possible :
		{{ possible_answer.answer }}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ possible_answer.id }}</td>
			</tr>
			<tr>
				<th>Type</th>
				<td>{{ possible_answer.type }}</td>
			</tr>
			<tr>
				<th>Réponse</th>
				<td>{{ possible_answer.answer }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ possible_answer.createdAt ? possible_answer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ possible_answer.updatedAt ? possible_answer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Balise</th>
				<td>{{ possible_answer.balise }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-primary" href="{{ path('app_possible_answer_index') }}">Retour</a>

	<a class="btn btn-warning" href="{{ path('app_possible_answer_edit', {'id': possible_answer.id}) }}">Editer</a>

	{{ include('admin/possible_answer/_delete_form.html.twig') }}
{% endblock %}

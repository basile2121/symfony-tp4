{% extends 'admin/base_admin.html.twig' %}

{% block title %}PossibleAnswer{% endblock %}

{% block body %}
<section class="container-fluid">
    <h1>PossibleAnswer</h1>

    <div class="content">
        <div class="actions">
            <a class="btn btn-success" href="{{ path('app_possible_answer_new') }}">Ajouter + </a>
            <a class="btn btn-primary" href="{{ path('app_admin') }}">Retour</a>
        </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Answer</th>
                <th>Balise HTML</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for possible_answer in possible_answers %}
            <tr>
                <td>{{ possible_answer.id }}</td>
                <td>{{ possible_answer.type }}</td>
                <td>{{ possible_answer.answer }}</td>
                <td>{{ possible_answer.balise }}</td>
                <td>{{ possible_answer.createdAt ? possible_answer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ possible_answer.updatedAt ? possible_answer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_possible_answer_show', {'id': possible_answer.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_possible_answer_edit', {'id': possible_answer.id}) }}">edit</a>
                    {{ include('admin/possible_answer/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas de données trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</section>
{% endblock %}

{% extends 'admin/base_admin.html.twig' %}

{% block title %}Liste - Activité
{% endblock %}

{% block body %}
	<section class="container-fluid">
		<h1>Liste des activités</h1>

		<div class="content">
			<div class="actions">
				<a class="btn btn-success" href="{{ path('app_activity_new') }}">Ajouter
				</a>
				<a class="btn btn-primary" href="{{ path('app_admin') }}">Retour</a>
			</div>

			<table class="table table-striped">
				<thead>
					<tr>
						<th>Id</th>
						<th>Activité</th>
						<th>CreatedAt</th>
						<th>UpdatedAt</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for activity in activities %}
						<tr>
							<td>{{ activity.id }}</td>
							<td>{{ activity.name }}</td>
							<td>{{ activity.createdAt ? activity.createdAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>{{ activity.updatedAt ? activity.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>
								<a class="btn btn-primary" href="{{ path('app_activity_show', {'id': activity.id}) }}">Voir</a>
								<a class="btn btn-warning" href="{{ path('app_activity_edit', {'id': activity.id}) }}">Editer</a>
								{{ include('admin/activity/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5">Pas de données trouvées</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</section>

{% endblock %}

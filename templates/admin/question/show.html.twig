{% extends 'admin/base_admin.html.twig' %}

{% block title %}Question
{% endblock %}

{% block body %}
	<h1>Question :
		{{ question.label }}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ question.id }}</td>
			</tr>
			<tr>
				<th>Question</th>
				<td>{{ question.label }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ question.createdAt ? question.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ question.updatedAt ? question.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<section class="container-fluid">
		<h1>PossibleAnswer</h1>

		<div class="content">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Réponse</th>
						<th>Type</th>
						<th>Balise HTML</th>
					</tr>
				</thead>
				<tbody>
					{% for possible_answer in question.possibleAnswer %}
						<tr>
							<td>{{ possible_answer.answer }}</td>
							<td>{{ possible_answer.type }}</td>
							<td>{{ possible_answer.balise }}</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="6">Pas de données trouvées</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</section>

	<a class="btn btn-primary" href="{{ path('app_question_index') }}">Retour</a>

	<a class="btn btn-warning" href="{{ path('app_question_edit', {'id': question.id}) }}">Editer</a>

	{{ include('admin/question/_delete_form.html.twig') }}
{% endblock %}

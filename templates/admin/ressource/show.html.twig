{% extends 'admin/base_admin.html.twig' %}

{% block title %}Ressource
{% endblock %}

{% block body %}
	<h1>Ressource
		{{ ressource.name }}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ ressource.id }}</td>
			</tr>
			<tr>
				<th>Ressource</th>
				<td>{{ ressource.name }}</td>
			</tr>
			<tr>
				<th>Url</th>
				<td>{{ ressource.url }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ ressource.createdAt ? ressource.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ ressource.updatedAt ? ressource.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-primary" href="{{ path('app_ressource_index') }}">Retour</a>

	<a class="btn btn-warning" href="{{ path('app_ressource_edit', {'id': ressource.id}) }}">Editer</a>

	{{ include('admin/ressource/_delete_form.html.twig') }}
{% endblock %}

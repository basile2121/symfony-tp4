{% extends 'admin/base_admin.html.twig' %}

{% block title %}Liste - Ressources
{% endblock %}

{% block body %}
	<section class="container-fluid">
		<h1>Liste des ressources</h1>

		<div class="content">
			<div class="actions">
				<a class="btn btn-success" href="{{ path('app_ressource_new') }}">Ajouter
				</a>
				<a class="btn btn-primary" href="{{ path('app_admin') }}">Retour</a>
			</div>

			<table class="table table-striped">
				<thead>
					<tr>
						<th>Id</th>
						<th>Ressources</th>
						<th>Url</th>
						<th>CreatedAt</th>
						<th>UpdatedAt</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for ressource in ressources %}
						<tr>
							<td>{{ ressource.id }}</td>
							<td>{{ ressource.name }}</td>
							<td>{{ ressource.url }}</td>
							<td>{{ ressource.createdAt ? ressource.createdAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>{{ ressource.updatedAt ? ressource.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>
								<a class="btn btn-primary" href="{{ path('app_ressource_show', {'id': ressource.id}) }}">Voir</a>
								<a class="btn btn-warning" href="{{ path('app_ressource_edit', {'id': ressource.id}) }}">Editer</a>
								{{ include('admin/ressource/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="6">Pas de données trouvées</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</section>
{% endblock %}

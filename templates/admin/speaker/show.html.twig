{% extends 'admin/base_admin.html.twig' %}

{% block title %}Intervenant
{% endblock %}

{% block body %}
	<h1>Intervenant
		{{speaker.lastName}}
		{{speaker.firstName}}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ speaker.id }}</td>
			</tr>
			<tr>
				<th>Prénom</th>
				<td>{{ speaker.firstName }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ speaker.lastName }}</td>
			</tr>
			<tr>
				<th>Mail</th>
				<td>{{ speaker.mail }}</td>
			</tr>
			<tr>
				<th>Téléphone</th>
				<td>{{ speaker.phone }}</td>
			</tr>
			<tr>
				<th>Entreprise</th>
				<td>{{ speaker.compagny }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ speaker.createdAt ? speaker.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ speaker.updatedAt ? speaker.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-primary" href="{{ path('app_speaker_index') }}">Retour</a>

	<a class="btn btn-warning" href="{{ path('app_speaker_edit', {'id': speaker.id}) }}">Editer</a>

	{{ include('admin/speaker/_delete_form.html.twig') }}
{% endblock %}

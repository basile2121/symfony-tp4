{% extends 'admin/base_admin.html.twig' %}

{% block title %}Job{% endblock %}

{% block body %}
    <h1>Job</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ job.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ job.createdAt ? job.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ job.updatedAt ? job.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <h1>Workshop</h1>
    <p>{{ job.workshop.name }}</p>
    <p>{{ job.workshop.createdAt ? job.workshop.createdAt|date('Y-m-d H:i:s') : ''  }}</p>

    <a class="btn btn-primary" href="{{ path('app_job_index') }}">back to list</a>

    <a class="btn btn-warning" href="{{ path('app_job_edit', {'id': job.id}) }}">edit</a>

    {{ include('admin/job/_delete_form.html.twig') }}
{% endblock %}

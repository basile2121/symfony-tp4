{% extends 'admin/base_admin.html.twig' %}

{% block title %}Métier
{% endblock %}

{% block body %}
	<h1>Métier :
		{{ job.name }}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ job.id }}</td>
			</tr>
			<tr>
				<th>Métier</th>
				<td>{{ job.name }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ job.createdAt ? job.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ job.updatedAt ? job.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<h1>Atelier</h1>
	<p>{{ job.workshop.name }}</p>
	<p>{{ job.workshop.createdAt ? job.workshop.createdAt|date('Y-m-d H:i:s') : ''  }}</p>

	<a class="btn btn-primary" href="{{ path('app_job_index') }}">Retour</a>

	<a class="btn btn-warning" href="{{ path('app_job_edit', {'id': job.id}) }}">Editer</a>

	{{ include('admin/job/_delete_form.html.twig') }}
{% endblock %}

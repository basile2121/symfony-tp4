{% extends 'admin/base_admin.html.twig' %}

{% block title %}Liste - Secteur
{% endblock %}

{% block body %}
	<section class="container-fluid">
		<h1>Secteur d'activité</h1>

		<div class="content">
			<div class="actions">
				<a class="btn btn-success" href="{{ path('app_sector_new') }}">Ajouter
				</a>
				<a class="btn btn-primary" href="{{ path('app_admin') }}">Retour</a>
			</div>

			<table class="table table-striped">
				<thead>
					<tr>
						<th>Id</th>
						<th>Secteur</th>
						<th>Description</th>
						<th>CreatedAt</th>
						<th>UpdatedAt</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for sector in sectors %}
						<tr>
							<td>{{ sector.id }}</td>
							<td>{{ sector.name }}</td>
							<td>{{ sector.description }}</td>
							<td>{{ sector.createdAt ? sector.createdAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>{{ sector.updatedAt ? sector.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>
								<a class="btn btn-primary" href="{{ path('app_sector_show', {'id': sector.id}) }}">Voir</a>
								<a class="btn btn-warning" href="{{ path('app_sector_edit', {'id': sector.id}) }}">Editer</a>
								{{ include('admin/sector/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="6">Pas de données trouvées</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</section>
{% endblock %}

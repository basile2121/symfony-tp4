{% extends 'admin/base_admin.html.twig' %}

{% block title %}Compétences
{% endblock %}

{% block body %}
	<h1>Compétences</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ skill.id }}</td>
			</tr>
			<tr>
				<th>Compétence</th>
				<td>{{ skill.name }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ skill.createdAt ? skill.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ skill.updatedAt ? skill.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-primary" href="{{ path('app_skill_index') }}">Retour</a>

	<a class="btn btn-warning" href="{{ path('app_skill_edit', {'id': skill.id}) }}">Editer</a>

	{{ include('admin/skill/_delete_form.html.twig') }}
{% endblock %}

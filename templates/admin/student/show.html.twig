{% extends 'admin/base_admin.html.twig' %}

{% block title %}Etudiants
{% endblock %}

{% block body %}
	<h1>Etudiants</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ student.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ student.email }}</td>
			</tr>
			<tr>
				<th>Password</th>
				<td>{{ student.password }}</td>
			</tr>
			<tr>
				<th>Téléphone</th>
				<td>{{ student.phone }}</td>
			</tr>
			<tr>
				<th>Prénom</th>
				<td>{{ student.firstName }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ student.lastName }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-primary" href="{{ path('app_student_index') }}">Retour</a>

	<a class="btn btn-warning" href="{{ path('app_student_edit', {'id': student.id}) }}">Editer</a>

	{{ include('admin/student/_delete_form.html.twig') }}
{% endblock %}

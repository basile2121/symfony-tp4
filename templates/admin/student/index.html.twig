{% extends 'admin/base_admin.html.twig' %}

{% block title %}Liste - Etudiants
{% endblock %}

{% block body %}
	<section class="container-fluid">
		<h1>Liste des étudiants</h1>

		<div class="content">
			<div class="actions">
				<a class="btn btn-success" href="{{ path('app_student_new') }}">Ajouter
				</a>
				<a class="btn btn-primary" href="{{ path('app_admin') }}">Retour</a>
			</div>

			<table class="table table-striped">
				<thead>
					<tr>
						<th>Id</th>
						<th>Email</th>
						<th>Roles</th>
						<th>Password</th>
						<th>Téléphone</th>
						<th>CreatedAt</th>
						<th>UpdatedAt</th>
						<th>Prénom</th>
						<th>Nom</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for student in students %}
						<tr>
							<td>{{ student.id }}</td>
							<td>{{ student.email }}</td>
							<td>{{ student.roles ? student.roles|json_encode : '' }}</td>
							<td>{{ student.password }}</td>
							<td>{{ student.phone }}</td>
							<td>{{ student.createdAt ? student.createdAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>{{ student.updatedAt ? student.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>{{ student.firstName }}</td>
							<td>{{ student.lastName }}</td>
							<td>
								<a href="{{ path('app_student_show', {'id': student.id}) }}">Voir</a>
								<a href="{{ path('app_student_edit', {'id': student.id}) }}">Editer</a>
								{{ include('admin/student/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5">Pas de données trouvées</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</section>
{% endblock %}

{% extends 'admin/base_admin.html.twig' %}

{% block title %}Answer{% endblock %}

{% block body %}
    <h1>Answer</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ answer.id }}</td>
        </tr>
        <tr>
            <th>Label</th>
            <td>{{ answer.label }}</td>
        </tr>
        <tr>
            <th>Question</th>
            <td>{{ answer.question }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ answer.createdAt ? answer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>UpdatedAt</th>
            <td>{{ answer.updatedAt ? answer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_answer_index') }}">back to list</a>

    <a class="btn btn-warning" href="{{ path('app_answer_edit', {'id': answer.id}) }}">edit</a>

    {{ include('admin/answer/_delete_form.html.twig') }}
{% endblock %}

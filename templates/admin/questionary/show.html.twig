{% extends 'admin/base_admin.html.twig' %}

{% block title %}Questionary{% endblock %}

{% block body %}
    <h1>Questionary</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ questionary.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ questionary.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ questionary.createdAt ? questionary.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ questionary.updatedAt ? questionary.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <section class="container-fluid">
        <h1>Questions</h1>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Label</th>
                </tr>
                </thead>
                <tbody>
                {% for question in questionary.questions %}
                    <tr>
                        <td>{{ question.label }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Pas de questions trouv√©es</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>

    <a class="btn btn-primary" href="{{ path('app_questionary_index') }}">Retour</a>

    <a class="btn btn-warning" href="{{ path('app_questionary_edit', {'id': questionary.id}) }}">Modifier</a>

    {{ include('admin/questionary/_delete_form.html.twig') }}
{% endblock %}

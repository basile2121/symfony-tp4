{% extends 'admin/base_admin.html.twig' %}

{% block title %}Créneaux
{% endblock %}

{% block body %}
	<h1>Créneaux horaires</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ timeslot.id }}</td>
			</tr>
			<tr>
				<th>Créneau</th>
				<td>{{ timeslot.label }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ timeslot.createdAt ? timeslot.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ timeslot.updatedAt ? timeslot.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-primary" href="{{ path('app_timeslot_index') }}">Retour</a>

	<a class="btn btn-warning" href="{{ path('app_timeslot_edit', {'id': timeslot.id}) }}">Editer</a>

	{{ include('admin/timeslot/_delete_form.html.twig') }}
{% endblock %}

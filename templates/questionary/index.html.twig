{% extends 'base.html.twig' %}

{% block title %}Questionary index{% endblock %}

{% block body %}
    <h1>Questionary index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for questionary in questionaries %}
            <tr>
                <td>{{ questionary.id }}</td>
                <td>{{ questionary.name }}</td>
                <td>{{ questionary.createdAt ? questionary.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ questionary.updatedAt ? questionary.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_questionary_show', {'id': questionary.id}) }}">show</a>
                    <a href="{{ path('app_questionary_edit', {'id': questionary.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_questionary_new') }}">Create new</a>
{% endblock %}

{% extends 'base_admin.html.twig' %}

{% block title %}Edition{% endblock %}

{% block body %}
<section class="container-fluid">
    <h1>Edition</h1>

    <div class="content">
        <div class="actions">
            <a class="btn btn-success" href="{{ path('app_edition_new') }}">Ajouter + </a>
            <a class="btn btn-primary" href="{{ path('app_admin') }}">Retour</a>
        </div>


    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Year</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for edition in editions %}
            <tr>
                <td>{{ edition.id }}</td>
                <td>{{ edition.year }}</td>
                <td>{{ edition.createdAt ? edition.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ edition.updatedAt ? edition.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_edition_show', {'id': edition.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_edition_edit', {'id': edition.id}) }}">edit</a>
                    {{ include('edition/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de données trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</section>
{% endblock %}

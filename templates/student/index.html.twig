{% extends 'base_admin.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <section class="container-fluid">
        <h1>Student</h1>

        <div class="content">
            <div class="actions">
                <a class="btn btn-success" href="{{ path('app_student_new') }}">Ajouter + </a>
                <a class="btn btn-primary" href="{{ path('app_admin') }}">Retour</a>
            </div>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Mail</th>
                    <th>Phone</th>
                    <th>CreatedAt</th>
                    <th>UpdatedAt</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for student in students %}
                    <tr>
                        <td>{{ student.id }}</td>
                        <td>{{ student.mail }}</td>
                        <td>{{ student.phone }}</td>
                        <td>{{ student.createdAt ? student.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ student.updatedAt ? student.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a class="btn btn-primary"
                               href="{{ path('app_student_show', {'id': student.id}) }}">show</a>
                            <a class="btn btn-warning" href="{{ path('app_student_edit', {'id': student.id}) }}">edit</a>
                            {{ include('student/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Pas de données trouvées</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}
